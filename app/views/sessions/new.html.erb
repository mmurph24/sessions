<%= form_for(@session) do |f| %>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_area :date %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :client %><br />
    <%= f.select :client_id, options_for_select(Client.all.map{|s|[s.first_name, s.id]}) %><br><br>
  </div>
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
